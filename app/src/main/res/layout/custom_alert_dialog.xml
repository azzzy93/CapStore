<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back_for_custom_alert_dialog">

    <ImageView
        android:id="@+id/iv_done"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="66dp"
        android:src="@drawable/ic_done_for_custom_alert_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_custom_alert_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/sf_ui_text_regular"
        android:paddingHorizontal="18dp"
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_done"
        tools:text="@string/custom_alert_dialog_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_to_main_page"
        android:layout_width="320dp"
        android:layout_height="@dimen/btn_height_60"
        android:layout_gravity="center|bottom"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/go_home"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_custom_alert_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>