<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/back_for_cart</item>
    </style>

    <style name="YellowBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="fontFamily">@font/sf_ui_text_bold</item>
        <item name="backgroundTint">@color/btn_background_color</item>
        <item name="textColor">@color/btn_text_color</item>
        <item name="textAllCaps">false</item>
        <item name="textSize">16sp</item>
        <item name="cornerRadius">60dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextCartSum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_text_bold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBrandProductsRv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/sf_ui_text_heavy</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextModelProductsRv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black_text_30</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextPriceProductsRv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_text_bold</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextEditTextProfile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSmallTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ImageRoundBack">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">9dp</item>
        <item name="android:layout_marginTop">74dp</item>
        <item name="android:background">@drawable/back_circle_for_back_btn</item>
        <item name="android:src">@drawable/ic_back_btn</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextOrder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextProductSize">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/back_circle_for_size_product</item>
        <item name="android:fontFamily">@font/sf_ui_display_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextSignIn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_ui_text_regular</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SortTextStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/back_for_sort_text_def</item>
        <item name="android:fontFamily">@font/sf_ui_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>